<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity 
    table="qomo_alert_rule"
    repository-class="Acme\Bundle\AlertBundle\Repository\AlertRuleRepository" 
    name="Acme\Bundle\AlertBundle\Entity\AlertRule">
    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>
    <field name="alertRule" type="string" column="alert_rule" length="60"/>
    <field name="informRule" type="string" column="inform_rule" length="60"/>

    <many-to-one field="user" target-entity="Acme\Bundle\UserBundle\Entity\User">
            <join-column name="user_id" referenced-column-name="id" nullable="true" />
    </many-to-one>

    <many-to-one field="device" target-entity="Acme\Bundle\IotBundle\Entity\Device">
        <join-column name="device_id" referenced-column-name="id" nullable="true" />
    </many-to-one>
  </entity>
</doctrine-mapping>
