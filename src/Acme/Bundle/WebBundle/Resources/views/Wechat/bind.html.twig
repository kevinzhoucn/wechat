{% extends 'AcmeWebBundle:Layout:wechat_base.html.twig' %}

{% block title %}绑定设置{% endblock %}

{% block body_content %}
    <div class="container" id="container">
        <div class="cell">
            <div class="hd">
                <h1 class="page_title">绑定设备</h1>
            </div>
            <div class="bd">
                {{ form_start(form) }}
                    <div class="weui_cells weui_cells_form">
                        <div class="weui_cell">
                            <div class="weui_cell_hd">
                                <label class="weui_label">手机号：</label>
                            </div>
                            <div class="weui_cell_bd weui_cell_primary">
                                {{ form_widget(form.phone, {'attr': {'class' : 'weui_input', 'placeholder' : '请输入手机号', 'type' : 'number'}}) }}
                            </div>
                        </div>
                        <div class="weui_cell">
                            <div class="weui_cell_hd">
                                <label class="weui_label">序列号：</label>
                            </div>
                            <div class="weui_cell_bd weui_cell_primary">
                                {{ form_widget(form.sn, {'attr': {'class' : 'weui_input', 'placeholder' : '请输入设备序列号'}}) }}
                            </div>
                        </div>
                        <div class="weui_cell">
                            <div class="weui_cell_hd"><label class="weui_label">备选手机 1：</label></div>
                            <div class="weui_cell_bd weui_cell_primary">
                                {{ form_widget(form.phone1, {'attr': {'class' : 'weui_input', 'placeholder' : '请输入备选手机号1', 'type' : 'number'}}) }}
                            </div>
                        </div>
                        <div class="weui_cell">
                            <div class="weui_cell_hd"><label class="weui_label">备选手机 2：</label></div>
                            <div class="weui_cell_bd weui_cell_primary">
                                {{ form_widget(form.phone2, {'attr': {'class' : 'weui_input', 'placeholder' : '请输入备选手机号2', 'type' : 'number'}}) }}
                            </div>
                        </div>                        
                    </div>
                    <div class="weui_btn_area">
                        <input type="submit" class="weui_btn weui_btn_primary" value="提交" />
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block body_javascript %}
{% endblock %}
