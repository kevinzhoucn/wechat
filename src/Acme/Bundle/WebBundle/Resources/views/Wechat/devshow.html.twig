{% extends 'AcmeWebBundle:Layout:wechat_base.html.twig' %}

{% block title %}设备详情{% endblock %}

{% block body_content %}
    <div class="container" id="container">
        <div class="cell">
            <div class="bd">
                <div class="weui_cells_title">设备详情</div>
                <div class="weui_cells">
                    <div class="weui_cell">
                        <div class="weui_cell_bd weui_cell_primary">
                           <p> 序列号: </p>
                        </div>
                        <div class="weui_cell_ft">
                            {{ device.sn }}
                        </div>
                    </div>
                </div>

                <div class="weui_cells_title">报警设置</div>
                <div class="weui_cells">
                    <div class="weui_cell">
                        <div class="weui_cell_bd weui_cell_primary">
                           <p> 低电压: </p>
                        </div>
                        <div class="weui_cell_ft">
                            <input class="weui_switch" type="checkbox">
                        </div>
                    </div>
                    <div class="weui_cell">
                        <div class="weui_cell_bd weui_cell_primary">
                           <p> 烟雾: </p>
                        </div>
                        <div class="weui_cell_ft">
                            <input class="weui_switch" type="checkbox">
                        </div>
                    </div>
                    <div class="weui_cell">
                        <div class="weui_cell_bd weui_cell_primary">
                           <p> 测试信号: </p>
                        </div>
                        <div class="weui_cell_ft">
                            <input class="weui_switch" type="checkbox">
                        </div>
                    </div>
                </div>

                <div class="weui_cells_title">通知方式设置</div>
                <div class="weui_cells">
                    <div class="weui_cell">
                        <div class="weui_cell_bd weui_cell_primary">
                           <p> 微信: </p>
                        </div>
                        <div class="weui_cell_ft">
                            <input class="weui_switch" type="checkbox">
                        </div>
                    </div>
                    <div class="weui_cell">
                        <div class="weui_cell_bd weui_cell_primary">
                           <p> 短信: </p>
                        </div>
                        <div class="weui_cell_ft">
                            <input class="weui_switch" type="checkbox">
                        </div>
                    </div>
                    <div class="weui_cell">
                        <div class="weui_cell_bd weui_cell_primary">
                           <p> 电话: </p>
                        </div>
                        <div class="weui_cell_ft">
                            <input class="weui_switch" type="checkbox">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
{% endblock %}
