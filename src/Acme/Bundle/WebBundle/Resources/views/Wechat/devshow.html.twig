{% extends 'AcmeWebBundle:Layout:wechat_base.html.twig' %}

{% block title %}设备详情{% endblock %}

{% block body_content %}
    <div class="container" id="container">
        <div class="cell">
            <div class="bd">
                <div class="weui_cells_title">设备详情</div>
                <div class="weui_cells">
                    <div class="weui_cell">
                        <div class="weui_cell_bd weui_cell_primary">
                           <p> 序列号: </p>
                        </div>
                        <div class="weui_cell_ft">
                            {{ device.sn }}
                        </div>
                    </div>
                </div>
                {{ form_start(form) }}
                    <div class="weui_cells_title">报警设置</div>
                    <div class="weui_cells">
                        <div class="weui_cell">
                            <div class="weui_cell_bd weui_cell_primary">
                               <p> 报警信号: </p>
                            </div>
                            <div class="weui_cell_ft">
                                {{ form_widget(form.channel1) }}
                            </div>
                        </div>
                        <div class="weui_cell">
                            <div class="weui_cell_bd weui_cell_primary">
                               <p> 测试信号: </p>
                            </div>
                            <div class="weui_cell_ft">
                                {{ form_widget(form.channel2) }}
                            </div>
                        </div>
                        <div class="weui_cell">
                            <div class="weui_cell_bd weui_cell_primary">
                               <p> 低电压: </p>
                            </div>
                            <div class="weui_cell_ft">
                                {{ form_widget(form.channel3) }}                                
                            </div>
                        </div>
                    </div>

                    <div class="weui_cells_title">通知方式设置</div>
                    <div class="weui_cells">
                        <div class="weui_cell">
                            <div class="weui_cell_bd weui_cell_primary">
                               <p> 微信: </p>
                            </div>
                            <div class="weui_cell_ft">
                                {{ form_widget(form.wechat) }}
                            </div>
                        </div>
                        <div class="weui_cell">
                            <div class="weui_cell_bd weui_cell_primary">
                               <p> 短信: </p>
                            </div>
                            <div class="weui_cell_ft">
                                {{ form_widget(form.sms) }}
                            </div>
                        </div>
                        <div class="weui_cell">
                            <div class="weui_cell_bd weui_cell_primary">
                               <p> 电话: </p>
                            </div>
                            <div class="weui_cell_ft">
                                {{ form_widget(form.voice) }}
                            </div>
                        </div>
                    </div>

                    <div class="weui_btn_area">
                        <input type="submit" class="weui_btn weui_btn_primary" value="提交" />
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}


{% block body_javascript %}
{% endblock %}